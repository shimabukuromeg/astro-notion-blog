---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  prevPost: Post
  nextPost: Post
}

const { prevPost, nextPost } = Astro.props
---

<nav class="post-nav">
  <div class="nav-prev">
    {prevPost && (
      <a href={getPostLink(prevPost.Slug)}>← Previous</a>
    )}
  </div>
  <div class="nav-next">
    {nextPost && (
      <a href={getPostLink(nextPost.Slug)}>Next →</a>
    )}
  </div>
</nav>

<style>
  .post-nav {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
    font-size: 0.95rem;
  }
  .post-nav a {
    color: var(--link-color, #0066cc);
  }
  .post-nav a:hover {
    text-decoration: underline;
  }
  .nav-next {
    text-align: right;
  }
</style>
