---
import { Post } from '../lib/interfaces.ts'
import { getDateStr } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-date">
  {post.Date ? getDateStr(post.Date) : ''}
</div>

<style>
  .post-date {
    flex-shrink: 0;
    min-width: 100px;
    padding: 0;
    font-size: 0.9rem;
    color: var(--date-color, #999);
  }
</style>
